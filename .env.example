# .env.example

# Work directory for zen state files
ZEN_WORK_DIR=.zen

# Linter script name
ZEN_LINTER=zen_lint.py

# Models for each phase
ZEN_MODEL_BRAIN=opus      # Planning (expensive, smart)
ZEN_MODEL_HANDS=sonnet    # Implementation (balanced)
ZEN_MODEL_EYES=haiku      # Summarization (cheap, fast)

# Execution settings
ZEN_TIMEOUT=600           # Seconds per Claude call
ZEN_RETRIES=2             # Retry attempts per step
ZEN_LINTER_TIMEOUT=120    # Max seconds for linter run

# Judge settings
ZEN_JUDGE_LOOPS=2         # Max code review steps


# Optional: path to claude CLI if not in PATH
# CLAUDE_EXE=/usr/local/bin/claude