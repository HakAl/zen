# .env.example

# =============================================================================
# SECURITY & TRUST
# =============================================================================
# Zen runs Claude with --dangerously-skip-permissions by default (YOLO mode).
# This allows autonomous file operations without prompts.

# Disable YOLO mode - Claude will prompt for each file operation
# ZEN_SKIP_PERMISSIONS=false

# Limit YOLO mode to specific directories (comma-separated absolute paths)
# Outside these dirs, Claude will prompt for permissions
# ZEN_TRUST_ROOTS=/home/user/trusted-projects,/work/internal

# =============================================================================
# WORK DIRECTORY
# =============================================================================
ZEN_WORK_DIR=.zen

# =============================================================================
# MODELS
# =============================================================================
ZEN_MODEL_BRAIN=opus      # Planning (expensive, smart)
ZEN_MODEL_HANDS=sonnet    # Implementation (balanced)
ZEN_MODEL_EYES=haiku      # Summarization (cheap, fast)

# =============================================================================
# EXECUTION
# =============================================================================
ZEN_TIMEOUT=600           # Seconds per Claude call
ZEN_RETRIES=2             # Retry attempts per step
ZEN_LINTER_TIMEOUT=120    # Max seconds for linter run
ZEN_SHOW_COSTS=false      # Print per-call cost and token counts

# =============================================================================
# JUDGE PHASE
# =============================================================================
ZEN_JUDGE_LOOPS=1         # Max code review iterations

# Auto-skip thresholds (Judge skipped for simple changes)
ZEN_JUDGE_TRIVIAL=10      # Lines changed threshold
ZEN_JUDGE_SMALL=30        # Small change threshold
ZEN_JUDGE_SIMPLE_LINES=50 # Simple plan line threshold
ZEN_JUDGE_SIMPLE_STEPS=4  # Simple plan step threshold

# =============================================================================
# OPTIONAL
# =============================================================================
# Path to claude CLI if not in PATH
# CLAUDE_EXE=/usr/local/bin/claude

# Custom linter script
# ZEN_LINTER=zen_lint.py